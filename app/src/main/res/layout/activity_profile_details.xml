<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ProfileDetailsActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/img_dim"
        android:layout_height="@dimen/img_dim"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile" />


    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_16"
        app:textFontFamily="@string/MYRIADPROBOLD" />

    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_16"
        app:textFontFamily="@string/MYRIADPROBOLD" />

    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_about_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_12"
        app:textFontFamily="@string/MyRiadProRegular" />

    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_14"
        app:textFontFamily="@string/MyRiadProRegular" />

    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_14"
        app:textFontFamily="@string/MyRiadProRegular" />


    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_ethnicity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_14"
        app:textFontFamily="@string/MyRiadProRegular" />

    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_religion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_14"
        app:textFontFamily="@string/MyRiadProRegular" />

    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_14"
        app:textFontFamily="@string/MyRiadProRegular" />

    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_figure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_14"
        app:textFontFamily="@string/MyRiadProRegular" />

    <com.niraj.sparkprofile.customui.AppTextViewCFS
        android:id="@+id/tv_marital_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim5dp"
        android:text="Item"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontsize_16"
        app:textFontFamily="@string/MYRIADPROBOLD" />
</LinearLayout>


